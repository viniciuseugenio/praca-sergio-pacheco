# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database (DigitalOcean PostgreSQL - automatically provided)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Security
ALLOWED_HOSTS=your-app-name.ondigitalocean.app,yourdomain.com

# CORS (Frontend URLs - add your production frontend URL)
CORS_ALLOWED_ORIGINS=https://your-frontend-url.com,http://localhost:5173

# JWT Settings (optional - uses defaults if not set)
ACCESS_TOKEN_LIFETIME_MINUTES=15
REFRESH_TOKEN_LIFETIME_DAYS=7
